{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext", // Use ESNext for ECMAScript module syntax
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "noEmit": false // This ensures TypeScript outputs JavaScript
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
